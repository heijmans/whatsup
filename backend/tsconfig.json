{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist/",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2015",
    "types": ["jest", "node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/lib/test-helpers.ts", "src/**/*.test.ts"]
}
